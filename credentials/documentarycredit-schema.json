{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/jgmikael/trade-automation/credentials/documentarycredit-schema.json",
  "title": "Documentary Credit Verifiable Credential",
  "description": "W3C Verifiable Credential schema for KTDDE Documentary Credit",
  "type": "object",
  "required": [
    "@context",
    "type",
    "issuer",
    "issuanceDate",
    "credentialSubject"
  ],
  "properties": {
    "@context": {
      "type": "array",
      "items": [
        {
          "const": "https://www.w3.org/2018/credentials/v1"
        },
        {
          "type": "string",
          "format": "uri"
        }
      ],
      "minItems": 2
    },
    "id": {
      "type": "string",
      "format": "uri"
    },
    "type": {
      "type": "array",
      "contains": {
        "const": "VerifiableCredential"
      },
      "items": {
        "type": "string"
      },
      "minItems": 2
    },
    "issuer": {
      "oneOf": [
        {
          "type": "string",
          "format": "uri"
        },
        {
          "type": "object",
          "required": [
            "id"
          ],
          "properties": {
            "id": {
              "type": "string",
              "format": "uri"
            },
            "name": {
              "type": "string"
            }
          }
        }
      ]
    },
    "issuanceDate": {
      "type": "string",
      "format": "date-time"
    },
    "expirationDate": {
      "type": "string",
      "format": "date-time"
    },
    "credentialSubject": {
      "type": "object",
      "required": [
        "type",
        "issueDate"
      ],
      "properties": {
        "id": {
          "type": "string",
          "format": "uri",
          "description": "DID or URI of the DocumentaryCredit"
        },
        "type": {
          "const": "DocumentaryCredit"
        },
        "confirmationAddedDate": {
          "description": "Confirmation Added Date",
          "type": "string",
          "format": "date"
        },
        "hasPaymentTerms": {
          "description": "has payment terms",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "const": "PaymentTerms"
              }
            }
          }
        },
        "hasAvailabilityMethod": {
          "description": "has availability method",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "const": "AvailabilityMethod"
              }
            }
          }
        },
        "additionalAmountsCovered": {
          "description": "additional amounts covered",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "const": "AdditionalAmountCategory"
              }
            }
          }
        },
        "requestedConfirmationParty": {
          "description": "requested confirmation party",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "const": "Party"
              }
            }
          }
        },
        "hasShipment": {
          "description": "has shipment",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "const": "Shipment"
              }
            }
          }
        },
        "advisingBankParty": {
          "description": "advising bank party",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "const": "Party"
              }
            }
          }
        },
        "reimbursingBankParty": {
          "description": "reimbursing bank party",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "const": "Party"
              }
            }
          }
        },
        "coversAdditionalCharge": {
          "description": "covers additional charge",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "const": "AllowanceCharge"
              }
            }
          }
        },
        "applicantParty": {
          "description": "applicant party",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "const": "Party"
              }
            }
          }
        },
        "presentationPeriodDays": {
          "description": "Presentation Period Days",
          "type": "integer"
        },
        "hasCreditAvailability": {
          "description": "has credit availability",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "const": "CreditAvailability"
              }
            }
          }
        },
        "requiresDocument": {
          "description": "requires document",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "const": "DocumentRequirement"
              }
            }
          }
        },
        "partialShipmentAllowed": {
          "description": "Partial Shipment Allowed",
          "type": "boolean"
        },
        "hasPresentationPeriod": {
          "description": "has presentation period",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "const": "PeriodOfTime"
              }
            }
          }
        },
        "maximumCreditAmount": {
          "description": "maximum credit amount",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "const": "MonetaryAmount"
              }
            }
          }
        },
        "referencesPreAdvice": {
          "description": "references pre advice",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "const": "Document"
              }
            }
          }
        },
        "includesAllowanceCharge": {
          "description": "includes allowance charge",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "const": "AllowanceCharge"
              }
            }
          }
        },
        "expiryDate": {
          "description": "Expiry Date",
          "type": "string",
          "format": "date"
        },
        "latestShipmentDate": {
          "description": "Latest Shipment Date",
          "type": "string",
          "format": "date"
        },
        "issuingBankParty": {
          "description": "issuing bank party",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "const": "Party"
              }
            }
          }
        },
        "hasDeliveryMilestone": {
          "description": "has delivery milestone",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "const": "DeliveryMilestone"
              }
            }
          }
        },
        "applicableRules": {
          "description": "applicable rules",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "const": "RuleSet"
              }
            }
          }
        },
        "issueDate": {
          "description": "Issue Date",
          "type": "string",
          "format": "date"
        },
        "hasShipmentPeriod": {
          "description": "has shipment period",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "const": "PeriodOfTime"
              }
            }
          }
        },
        "presentationBaseEvent": {
          "description": "presentation base event",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "const": "ShipmentBasis"
              }
            }
          }
        },
        "beneficiaryParty": {
          "description": "beneficiary party",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "const": "Party"
              }
            }
          }
        },
        "hasPaymentLine": {
          "description": "has payment line",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "const": "PaymentLine"
              }
            }
          }
        },
        "AdditionalConditionsText": {
          "description": "Additional Conditions Text",
          "type": "string"
        },
        "confirmingParty": {
          "description": "confirming party",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "const": "Party"
              }
            }
          }
        },
        "confirmationInstructionCode": {
          "description": "confirmation instruction code",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "const": "Concept"
              }
            }
          }
        },
        "creditAmountTolerancePercentage": {
          "description": "Credit Amount Tolerance Percentage",
          "type": "number"
        },
        "latestPresentationDate": {
          "description": "Latest Presentation Date",
          "type": "string",
          "format": "date"
        },
        "applicantBankParty": {
          "description": "applicant bank party",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "const": "Party"
              }
            }
          }
        },
        "placeOfExpiry": {
          "description": "place of expiry",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "const": "Location"
              }
            }
          }
        },
        "adviseThroughBankParty": {
          "description": "advise through bank party",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "const": "Party"
              }
            }
          }
        },
        "draweeParty": {
          "description": "drawee party",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "const": "Party"
              }
            }
          }
        },
        "placeOfPresentation": {
          "description": "place of presentation",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "const": "Location"
              }
            }
          }
        },
        "documentaryCreditTypeCode": {
          "description": "Documentary Credit Type Code",
          "type": "string"
        },
        "creditIdentifier": {
          "description": "Credit Identifier",
          "type": "string"
        },
        "instructionToBank": {
          "description": "instruction to bank",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "const": "BankInstruction"
              }
            }
          }
        },
        "transshipmentAllowed": {
          "description": "Transshipment Allowed",
          "type": "boolean"
        }
      }
    },
    "proof": {
      "type": "object",
      "description": "Digital signature proof"
    }
  }
}
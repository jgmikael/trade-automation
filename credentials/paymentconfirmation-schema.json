{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/jgmikael/trade-automation/credentials/paymentconfirmation-schema.json",
  "title": "Payment Confirmation Verifiable Credential",
  "description": "W3C Verifiable Credential schema for KTDDE Payment Confirmation",
  "type": "object",
  "required": [
    "@context",
    "type",
    "issuer",
    "issuanceDate",
    "credentialSubject"
  ],
  "properties": {
    "@context": {
      "type": "array",
      "items": [
        {
          "const": "https://www.w3.org/2018/credentials/v1"
        },
        {
          "type": "string",
          "format": "uri"
        }
      ],
      "minItems": 2
    },
    "id": {
      "type": "string",
      "format": "uri"
    },
    "type": {
      "type": "array",
      "contains": {
        "const": "VerifiableCredential"
      },
      "items": {
        "type": "string"
      },
      "minItems": 2
    },
    "issuer": {
      "oneOf": [
        {
          "type": "string",
          "format": "uri"
        },
        {
          "type": "object",
          "required": [
            "id"
          ],
          "properties": {
            "id": {
              "type": "string",
              "format": "uri"
            },
            "name": {
              "type": "string"
            }
          }
        }
      ]
    },
    "issuanceDate": {
      "type": "string",
      "format": "date-time"
    },
    "expirationDate": {
      "type": "string",
      "format": "date-time"
    },
    "credentialSubject": {
      "type": "object",
      "required": [
        "type"
      ],
      "properties": {
        "id": {
          "type": "string",
          "format": "uri",
          "description": "DID or URI of the PaymentConfirmation"
        },
        "type": {
          "const": "PaymentConfirmation"
        },
        "hasConfirmationNumber": {
          "description": "has confirmationnumber"
        },
        "hasPaymentDate": {
          "description": "has paymentdate"
        },
        "hasPayer": {
          "description": "has payer"
        },
        "hasPayee": {
          "description": "has payee"
        },
        "hasPaymentAmount": {
          "description": "has paymentamount"
        },
        "hasPaymentMethod": {
          "description": "has paymentmethod"
        },
        "hasReferenceDocument": {
          "description": "has referencedocument"
        }
      }
    },
    "proof": {
      "type": "object",
      "description": "Digital signature proof"
    }
  }
}
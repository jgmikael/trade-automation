{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/jgmikael/trade-automation/credentials/transitaccompanyingdocument-schema.json",
  "title": "Transit Accompanying Document Verifiable Credential",
  "description": "W3C Verifiable Credential schema for KTDDE Transit Accompanying Document",
  "type": "object",
  "required": [
    "@context",
    "type",
    "issuer",
    "issuanceDate",
    "credentialSubject"
  ],
  "properties": {
    "@context": {
      "type": "array",
      "items": [
        {
          "const": "https://www.w3.org/2018/credentials/v1"
        },
        {
          "type": "string",
          "format": "uri"
        }
      ],
      "minItems": 2
    },
    "id": {
      "type": "string",
      "format": "uri"
    },
    "type": {
      "type": "array",
      "contains": {
        "const": "VerifiableCredential"
      },
      "items": {
        "type": "string"
      },
      "minItems": 2
    },
    "issuer": {
      "oneOf": [
        {
          "type": "string",
          "format": "uri"
        },
        {
          "type": "object",
          "required": [
            "id"
          ],
          "properties": {
            "id": {
              "type": "string",
              "format": "uri"
            },
            "name": {
              "type": "string"
            }
          }
        }
      ]
    },
    "issuanceDate": {
      "type": "string",
      "format": "date-time"
    },
    "expirationDate": {
      "type": "string",
      "format": "date-time"
    },
    "credentialSubject": {
      "type": "object",
      "required": [
        "type"
      ],
      "properties": {
        "id": {
          "type": "string",
          "format": "uri",
          "description": "DID or URI of the TransitAccompanyingDocument"
        },
        "type": {
          "const": "TransitAccompanyingDocument"
        },
        "hasDocumentNumber": {
          "description": "has documentnumber"
        },
        "hasIssueDate": {
          "description": "has issuedate"
        },
        "hasDeclarant": {
          "description": "has declarant"
        },
        "hasOfficeOfDeparture": {
          "description": "has officeofdeparture"
        },
        "hasOfficeOfDestination": {
          "description": "has officeofdestination"
        },
        "hasGoodsItem": {
          "description": "has goodsitem"
        },
        "hasGuarantee": {
          "description": "has guarantee"
        }
      }
    },
    "proof": {
      "type": "object",
      "description": "Digital signature proof"
    }
  }
}
{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/jgmikael/trade-automation/credentials/insurancecertificate-schema.json",
  "title": "Insurance Certificate Verifiable Credential",
  "description": "W3C Verifiable Credential schema for KTDDE Insurance Certificate",
  "type": "object",
  "required": [
    "@context",
    "type",
    "issuer",
    "issuanceDate",
    "credentialSubject"
  ],
  "properties": {
    "@context": {
      "type": "array",
      "items": [
        {
          "const": "https://www.w3.org/2018/credentials/v1"
        },
        {
          "type": "string",
          "format": "uri"
        }
      ],
      "minItems": 2
    },
    "id": {
      "type": "string",
      "format": "uri"
    },
    "type": {
      "type": "array",
      "contains": {
        "const": "VerifiableCredential"
      },
      "items": {
        "type": "string"
      },
      "minItems": 2
    },
    "issuer": {
      "oneOf": [
        {
          "type": "string",
          "format": "uri"
        },
        {
          "type": "object",
          "required": [
            "id"
          ],
          "properties": {
            "id": {
              "type": "string",
              "format": "uri"
            },
            "name": {
              "type": "string"
            }
          }
        }
      ]
    },
    "issuanceDate": {
      "type": "string",
      "format": "date-time"
    },
    "expirationDate": {
      "type": "string",
      "format": "date-time"
    },
    "credentialSubject": {
      "type": "object",
      "required": [
        "type"
      ],
      "properties": {
        "id": {
          "type": "string",
          "format": "uri",
          "description": "DID or URI of the InsuranceCertificate"
        },
        "type": {
          "const": "InsuranceCertificate"
        },
        "hasCertificateNumber": {
          "description": "has certificatenumber"
        },
        "hasIssueDate": {
          "description": "has issuedate"
        },
        "hasInsurer": {
          "description": "has insurer"
        },
        "hasInsured": {
          "description": "has insured"
        },
        "hasPolicyNumber": {
          "description": "has policynumber"
        },
        "hasInsuredAmount": {
          "description": "has insuredamount"
        },
        "hasGoodsDescription": {
          "description": "has goodsdescription"
        },
        "hasTransportDetails": {
          "description": "has transportdetails"
        }
      }
    },
    "proof": {
      "type": "object",
      "description": "Digital signature proof"
    }
  }
}
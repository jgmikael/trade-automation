{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/jgmikael/trade-automation/credentials/phytosanitarycertificate-schema.json",
  "title": "Phytosanitary Certificate Verifiable Credential",
  "description": "W3C Verifiable Credential schema for KTDDE Phytosanitary Certificate",
  "type": "object",
  "required": [
    "@context",
    "type",
    "issuer",
    "issuanceDate",
    "credentialSubject"
  ],
  "properties": {
    "@context": {
      "type": "array",
      "items": [
        {
          "const": "https://www.w3.org/2018/credentials/v1"
        },
        {
          "type": "string",
          "format": "uri"
        }
      ],
      "minItems": 2
    },
    "id": {
      "type": "string",
      "format": "uri"
    },
    "type": {
      "type": "array",
      "contains": {
        "const": "VerifiableCredential"
      },
      "items": {
        "type": "string"
      },
      "minItems": 2
    },
    "issuer": {
      "oneOf": [
        {
          "type": "string",
          "format": "uri"
        },
        {
          "type": "object",
          "required": [
            "id"
          ],
          "properties": {
            "id": {
              "type": "string",
              "format": "uri"
            },
            "name": {
              "type": "string"
            }
          }
        }
      ]
    },
    "issuanceDate": {
      "type": "string",
      "format": "date-time"
    },
    "expirationDate": {
      "type": "string",
      "format": "date-time"
    },
    "credentialSubject": {
      "type": "object",
      "required": [
        "type"
      ],
      "properties": {
        "id": {
          "type": "string",
          "format": "uri",
          "description": "DID or URI of the PhytosanitaryCertificate"
        },
        "type": {
          "const": "PhytosanitaryCertificate"
        },
        "hasCertificateNumber": {
          "description": "has certificatenumber"
        },
        "hasIssueDate": {
          "description": "has issuedate"
        },
        "hasIssuingAuthority": {
          "description": "has issuingauthority"
        },
        "hasExporter": {
          "description": "has exporter"
        },
        "hasConsignee": {
          "description": "has consignee"
        },
        "hasPlaceOfOrigin": {
          "description": "has placeoforigin"
        },
        "hasMeansOfConveyance": {
          "description": "has meansofconveyance"
        },
        "hasPointOfEntry": {
          "description": "has pointofentry"
        },
        "hasTreatment": {
          "description": "has treatment"
        }
      }
    },
    "proof": {
      "type": "object",
      "description": "Digital signature proof"
    }
  }
}
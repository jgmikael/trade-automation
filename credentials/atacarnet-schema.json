{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/jgmikael/trade-automation/credentials/atacarnet-schema.json",
  "title": "ATA Carnet Verifiable Credential",
  "description": "W3C Verifiable Credential schema for KTDDE ATA Carnet",
  "type": "object",
  "required": [
    "@context",
    "type",
    "issuer",
    "issuanceDate",
    "credentialSubject"
  ],
  "properties": {
    "@context": {
      "type": "array",
      "items": [
        {
          "const": "https://www.w3.org/2018/credentials/v1"
        },
        {
          "type": "string",
          "format": "uri"
        }
      ],
      "minItems": 2
    },
    "id": {
      "type": "string",
      "format": "uri"
    },
    "type": {
      "type": "array",
      "contains": {
        "const": "VerifiableCredential"
      },
      "items": {
        "type": "string"
      },
      "minItems": 2
    },
    "issuer": {
      "oneOf": [
        {
          "type": "string",
          "format": "uri"
        },
        {
          "type": "object",
          "required": [
            "id"
          ],
          "properties": {
            "id": {
              "type": "string",
              "format": "uri"
            },
            "name": {
              "type": "string"
            }
          }
        }
      ]
    },
    "issuanceDate": {
      "type": "string",
      "format": "date-time"
    },
    "expirationDate": {
      "type": "string",
      "format": "date-time"
    },
    "credentialSubject": {
      "type": "object",
      "required": [
        "type"
      ],
      "properties": {
        "id": {
          "type": "string",
          "format": "uri",
          "description": "DID or URI of the ATACarnet"
        },
        "type": {
          "const": "ATACarnet"
        },
        "hasCarnetNumber": {
          "description": "has carnetnumber"
        },
        "hasIssueDate": {
          "description": "has issuedate"
        },
        "hasValidityDate": {
          "description": "has validitydate"
        },
        "hasHolderName": {
          "description": "has holdername"
        },
        "hasIssuingCountry": {
          "description": "has issuingcountry"
        },
        "hasGoodsList": {
          "description": "has goodslist"
        },
        "hasIntendedUse": {
          "description": "has intendeduse"
        }
      }
    },
    "proof": {
      "type": "object",
      "description": "Digital signature proof"
    }
  }
}
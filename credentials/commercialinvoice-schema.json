{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/jgmikael/trade-automation/credentials/commercialinvoice-schema.json",
  "title": "Commercial Invoice Verifiable Credential",
  "description": "W3C Verifiable Credential schema for KTDDE Commercial Invoice",
  "type": "object",
  "required": [
    "@context",
    "type",
    "issuer",
    "issuanceDate",
    "credentialSubject"
  ],
  "properties": {
    "@context": {
      "type": "array",
      "items": [
        {
          "const": "https://www.w3.org/2018/credentials/v1"
        },
        {
          "type": "string",
          "format": "uri"
        }
      ],
      "minItems": 2
    },
    "id": {
      "type": "string",
      "format": "uri"
    },
    "type": {
      "type": "array",
      "contains": {
        "const": "VerifiableCredential"
      },
      "items": {
        "type": "string"
      },
      "minItems": 2
    },
    "issuer": {
      "oneOf": [
        {
          "type": "string",
          "format": "uri"
        },
        {
          "type": "object",
          "required": [
            "id"
          ],
          "properties": {
            "id": {
              "type": "string",
              "format": "uri"
            },
            "name": {
              "type": "string"
            }
          }
        }
      ]
    },
    "issuanceDate": {
      "type": "string",
      "format": "date-time"
    },
    "expirationDate": {
      "type": "string",
      "format": "date-time"
    },
    "credentialSubject": {
      "type": "object",
      "required": [
        "type"
      ],
      "properties": {
        "id": {
          "type": "string",
          "format": "uri",
          "description": "DID or URI of the CommercialInvoice"
        },
        "type": {
          "const": "CommercialInvoice"
        },
        "freightChargesAmount": {
          "description": "freight charges amount",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "const": "MonetaryAmount"
              }
            }
          }
        },
        "purchaseOrderNumber": {
          "description": "Purchase Order Number",
          "type": "string"
        },
        "invoiceeParty": {
          "description": "invoicee party",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "const": "Party"
              }
            }
          }
        },
        "invoiceDocument": {
          "description": "invoice document"
        },
        "buyerParty": {
          "description": "buyer party",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "const": "Party"
              }
            }
          }
        },
        "paymentDueDate": {
          "description": "Payment Due Date",
          "type": "string",
          "format": "date"
        },
        "consigneeParty": {
          "description": "consignee party",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "const": "Party"
              }
            }
          }
        },
        "invoiceNumber": {
          "description": "Invoice Number",
          "type": "string"
        },
        "relatesToTransportDocument": {
          "description": "relates to transport document",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "const": "TransportDocument"
              }
            }
          }
        },
        "deliveryTerms": {
          "description": "delivery terms",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "const": "TradeDeliveryTerms"
              }
            }
          }
        },
        "invoicePaymentTerms": {
          "description": "invoice payment terms",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "const": "PaymentTerms"
              }
            }
          }
        },
        "hasInvoiceLine": {
          "description": "has invoice line",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "const": "InvoiceLine"
              }
            }
          }
        },
        "referencesLetterOfCredit": {
          "description": "references letter of credit",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "const": "DocumentaryCredit"
              }
            }
          }
        },
        "sellerParty": {
          "description": "seller party",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "const": "Party"
              }
            }
          }
        },
        "insuranceValueAmount": {
          "description": "insurance value amount",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "const": "MonetaryAmount"
              }
            }
          }
        },
        "totalAmount": {
          "description": "total amount",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "const": "MonetaryAmount"
              }
            }
          }
        },
        "sellersBank": {
          "description": "sellers bank",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "const": "Bank"
              }
            }
          }
        },
        "isBasedOnContract": {
          "description": "is based on contract",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "const": "Contract"
              }
            }
          }
        },
        "invoiceDate": {
          "description": "Invoice Date",
          "type": "string",
          "format": "date"
        }
      }
    },
    "proof": {
      "type": "object",
      "description": "Digital signature proof"
    }
  }
}
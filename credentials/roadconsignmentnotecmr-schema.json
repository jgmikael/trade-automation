{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/jgmikael/trade-automation/credentials/roadconsignmentnotecmr-schema.json",
  "title": "Road Consignment Note CMR Verifiable Credential",
  "description": "W3C Verifiable Credential schema for KTDDE Road Consignment Note CMR",
  "type": "object",
  "required": [
    "@context",
    "type",
    "issuer",
    "issuanceDate",
    "credentialSubject"
  ],
  "properties": {
    "@context": {
      "type": "array",
      "items": [
        {
          "const": "https://www.w3.org/2018/credentials/v1"
        },
        {
          "type": "string",
          "format": "uri"
        }
      ],
      "minItems": 2
    },
    "id": {
      "type": "string",
      "format": "uri"
    },
    "type": {
      "type": "array",
      "contains": {
        "const": "VerifiableCredential"
      },
      "items": {
        "type": "string"
      },
      "minItems": 2
    },
    "issuer": {
      "oneOf": [
        {
          "type": "string",
          "format": "uri"
        },
        {
          "type": "object",
          "required": [
            "id"
          ],
          "properties": {
            "id": {
              "type": "string",
              "format": "uri"
            },
            "name": {
              "type": "string"
            }
          }
        }
      ]
    },
    "issuanceDate": {
      "type": "string",
      "format": "date-time"
    },
    "expirationDate": {
      "type": "string",
      "format": "date-time"
    },
    "credentialSubject": {
      "type": "object",
      "required": [
        "type"
      ],
      "properties": {
        "id": {
          "type": "string",
          "format": "uri",
          "description": "DID or URI of the RoadConsignmentNoteCMR"
        },
        "type": {
          "const": "RoadConsignmentNoteCMR"
        },
        "hasCmrNumber": {
          "description": "has cmrnumber"
        },
        "hasIssueDate": {
          "description": "has issuedate"
        },
        "hasSender": {
          "description": "has sender"
        },
        "hasCarrier": {
          "description": "has carrier"
        },
        "hasConsignee": {
          "description": "has consignee"
        },
        "hasPlaceOfLoading": {
          "description": "has placeofloading"
        },
        "hasPlaceOfDelivery": {
          "description": "has placeofdelivery"
        },
        "hasGoodsDescription": {
          "description": "has goodsdescription"
        },
        "hasFreightCharges": {
          "description": "has freightcharges"
        }
      }
    },
    "proof": {
      "type": "object",
      "description": "Digital signature proof"
    }
  }
}
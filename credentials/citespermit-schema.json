{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/jgmikael/trade-automation/credentials/citespermit-schema.json",
  "title": "CITES Permit Verifiable Credential",
  "description": "W3C Verifiable Credential schema for KTDDE CITES Permit",
  "type": "object",
  "required": [
    "@context",
    "type",
    "issuer",
    "issuanceDate",
    "credentialSubject"
  ],
  "properties": {
    "@context": {
      "type": "array",
      "items": [
        {
          "const": "https://www.w3.org/2018/credentials/v1"
        },
        {
          "type": "string",
          "format": "uri"
        }
      ],
      "minItems": 2
    },
    "id": {
      "type": "string",
      "format": "uri"
    },
    "type": {
      "type": "array",
      "contains": {
        "const": "VerifiableCredential"
      },
      "items": {
        "type": "string"
      },
      "minItems": 2
    },
    "issuer": {
      "oneOf": [
        {
          "type": "string",
          "format": "uri"
        },
        {
          "type": "object",
          "required": [
            "id"
          ],
          "properties": {
            "id": {
              "type": "string",
              "format": "uri"
            },
            "name": {
              "type": "string"
            }
          }
        }
      ]
    },
    "issuanceDate": {
      "type": "string",
      "format": "date-time"
    },
    "expirationDate": {
      "type": "string",
      "format": "date-time"
    },
    "credentialSubject": {
      "type": "object",
      "required": [
        "type"
      ],
      "properties": {
        "id": {
          "type": "string",
          "format": "uri",
          "description": "DID or URI of the CITESPermit"
        },
        "type": {
          "const": "CITESPermit"
        },
        "hasPermitNumber": {
          "description": "has permitnumber"
        },
        "hasIssueDate": {
          "description": "has issuedate"
        },
        "hasExpiryDate": {
          "description": "has expirydate"
        },
        "hasIssuingAuthority": {
          "description": "has issuingauthority"
        },
        "hasExporter": {
          "description": "has exporter"
        },
        "hasImporter": {
          "description": "has importer"
        },
        "hasSpecies": {
          "description": "has species"
        },
        "hasQuantity": {
          "description": "has quantity"
        },
        "hasPurpose": {
          "description": "has purpose"
        }
      }
    },
    "proof": {
      "type": "object",
      "description": "Digital signature proof"
    }
  }
}
{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/jgmikael/trade-automation/credentials/billoflading-schema.json",
  "title": "Bill of Lading Verifiable Credential",
  "description": "W3C Verifiable Credential schema for KTDDE Bill of Lading",
  "type": "object",
  "required": [
    "@context",
    "type",
    "issuer",
    "issuanceDate",
    "credentialSubject"
  ],
  "properties": {
    "@context": {
      "type": "array",
      "items": [
        {
          "const": "https://www.w3.org/2018/credentials/v1"
        },
        {
          "type": "string",
          "format": "uri"
        }
      ],
      "minItems": 2
    },
    "id": {
      "type": "string",
      "format": "uri"
    },
    "type": {
      "type": "array",
      "contains": {
        "const": "VerifiableCredential"
      },
      "items": {
        "type": "string"
      },
      "minItems": 2
    },
    "issuer": {
      "oneOf": [
        {
          "type": "string",
          "format": "uri"
        },
        {
          "type": "object",
          "required": [
            "id"
          ],
          "properties": {
            "id": {
              "type": "string",
              "format": "uri"
            },
            "name": {
              "type": "string"
            }
          }
        }
      ]
    },
    "issuanceDate": {
      "type": "string",
      "format": "date-time"
    },
    "expirationDate": {
      "type": "string",
      "format": "date-time"
    },
    "credentialSubject": {
      "type": "object",
      "required": [
        "type"
      ],
      "properties": {
        "id": {
          "type": "string",
          "format": "uri",
          "description": "DID or URI of the BillOfLading"
        },
        "type": {
          "const": "BillOfLading"
        },
        "coversContract": {
          "description": "covers contract",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "const": "Contract"
              }
            }
          }
        },
        "originCountry": {
          "description": "origin country",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "const": "Country"
              }
            }
          }
        },
        "buyerParty": {
          "description": "buyer party",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "const": "Party"
              }
            }
          }
        },
        "plannedArrivalDateTime": {
          "description": "Planned Arrival Date Time",
          "type": "string",
          "format": "date-time"
        },
        "declaredCustomsValueAmount": {
          "description": "declared customs value amount",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "const": "MonetaryAmount"
              }
            }
          }
        },
        "descriptionOfGoodsText": {
          "description": "Description of Goods Text",
          "type": "string"
        },
        "paymentLocation": {
          "description": "payment location",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "const": "Location"
              }
            }
          }
        },
        "portOfDischargeUNLocode": {
          "description": "Port Of Discharge UN Locode",
          "type": "string"
        },
        "totalPackageQuantity": {
          "description": "total package quantity",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "const": "Quantity"
              }
            }
          }
        },
        "shippingMarks": {
          "description": "Shipping Marks",
          "type": "string"
        },
        "departurePlace": {
          "description": "departure place",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "const": "Location"
              }
            }
          }
        },
        "importerParty": {
          "description": "importer party",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "const": "Party"
              }
            }
          }
        },
        "houseWaybillDocumentIdentifier": {
          "description": "House Waybill Document Identifier",
          "type": "string"
        },
        "actualDepartureDateTime": {
          "description": "Actual Departure Date Time",
          "type": "string",
          "format": "date-time"
        },
        "placeOfIssue": {
          "description": "place of issue",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "const": "Location"
              }
            }
          }
        },
        "placeOfDeliveryUNLocode": {
          "description": "Place of Delivery UN Locode",
          "type": "string"
        },
        "documentIdentifier": {
          "description": "Document Identifier",
          "type": "string"
        },
        "hasPaymentTerms": {
          "description": "has payment terms",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "const": "PaymentTerms"
              }
            }
          }
        },
        "placeOfDischarge": {
          "description": "place of discharge",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "const": "Location"
              }
            }
          }
        },
        "exporterParty": {
          "description": "exporter party",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "const": "Party"
              }
            }
          }
        },
        "consigneeParty": {
          "description": "consignee party",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "const": "Party"
              }
            }
          }
        },
        "hasGoodsItem": {
          "description": "has goods item",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "const": "GoodsItem"
              }
            }
          }
        },
        "usesTransportEquipment": {
          "description": "uses transport equipment",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "const": "TransportEquipment"
              }
            }
          }
        },
        "placeOfLoading": {
          "description": "place of loading",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "const": "Location"
              }
            }
          }
        },
        "totalGrossWeight": {
          "description": "total gross weight",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "const": "Quantity"
              }
            }
          }
        },
        "arrivalPlace": {
          "description": "arrival place",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "const": "Location"
              }
            }
          }
        },
        "notifyParty": {
          "description": "notify party",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "const": "Party"
              }
            }
          }
        },
        "portOfLoadingUNLocode": {
          "description": "Port of Loading UN Locode",
          "type": "string"
        },
        "placeOfDelivery": {
          "description": "place of delivery",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "const": "Location"
              }
            }
          }
        },
        "usesTransportMeans": {
          "description": "uses transport means",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "const": "TransportMeans"
              }
            }
          }
        },
        "carrierParty": {
          "description": "carrier party",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "const": "Party"
              }
            }
          }
        },
        "consignorParty": {
          "description": "consignor party",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "const": "Party"
              }
            }
          }
        },
        "freightChargesAmount": {
          "description": "freight charges amount",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "const": "MonetaryAmount"
              }
            }
          }
        },
        "payerParty": {
          "description": "payer party",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "const": "Party"
              }
            }
          }
        },
        "totalNetWeight": {
          "description": "total net weight",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "const": "Quantity"
              }
            }
          }
        },
        "issueDate": {
          "description": "Issue Date",
          "type": "string",
          "format": "date"
        },
        "estimatedTimeOfDeparture": {
          "description": "Estimated Time of Departure",
          "type": "string",
          "format": "date-time"
        },
        "deliveryTermsText": {
          "description": "Delivery Terms Text",
          "type": "string"
        },
        "actualArrivalDateTime": {
          "description": "Actual Arrival Date Time",
          "type": "string",
          "format": "date-time"
        },
        "additionalConditionsText": {
          "description": "Additional Conditions Text",
          "type": "string"
        }
      }
    },
    "proof": {
      "type": "object",
      "description": "Digital signature proof"
    }
  }
}
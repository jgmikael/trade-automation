{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/jgmikael/trade-automation/credentials/customsdeclaration-schema.json",
  "title": "Customs Declaration Verifiable Credential",
  "description": "W3C Verifiable Credential schema for KTDDE Customs Declaration",
  "type": "object",
  "required": [
    "@context",
    "type",
    "issuer",
    "issuanceDate",
    "credentialSubject"
  ],
  "properties": {
    "@context": {
      "type": "array",
      "items": [
        {
          "const": "https://www.w3.org/2018/credentials/v1"
        },
        {
          "type": "string",
          "format": "uri"
        }
      ],
      "minItems": 2
    },
    "id": {
      "type": "string",
      "format": "uri"
    },
    "type": {
      "type": "array",
      "contains": {
        "const": "VerifiableCredential"
      },
      "items": {
        "type": "string"
      },
      "minItems": 2
    },
    "issuer": {
      "oneOf": [
        {
          "type": "string",
          "format": "uri"
        },
        {
          "type": "object",
          "required": [
            "id"
          ],
          "properties": {
            "id": {
              "type": "string",
              "format": "uri"
            },
            "name": {
              "type": "string"
            }
          }
        }
      ]
    },
    "issuanceDate": {
      "type": "string",
      "format": "date-time"
    },
    "expirationDate": {
      "type": "string",
      "format": "date-time"
    },
    "credentialSubject": {
      "type": "object",
      "required": [
        "type"
      ],
      "properties": {
        "id": {
          "type": "string",
          "format": "uri",
          "description": "DID or URI of the CustomsDeclaration"
        },
        "type": {
          "const": "CustomsDeclaration"
        },
        "hasDeclarationNumber": {
          "description": "has declarationnumber"
        },
        "hasDeclarationType": {
          "description": "has declarationtype"
        },
        "hasDeclarationDate": {
          "description": "has declarationdate"
        },
        "hasDeclarant": {
          "description": "has declarant"
        },
        "hasExporter": {
          "description": "has exporter"
        },
        "hasImporter": {
          "description": "has importer"
        },
        "hasCustomsOffice": {
          "description": "has customsoffice"
        },
        "hasGoodsItem": {
          "description": "has goodsitem"
        },
        "hasTotalInvoiceAmount": {
          "description": "has totalinvoiceamount"
        }
      }
    },
    "proof": {
      "type": "object",
      "description": "Digital signature proof"
    }
  }
}
{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/jgmikael/trade-automation/credentials/shipment-schema.json",
  "title": "Shipment Verifiable Credential",
  "description": "W3C Verifiable Credential schema for KTDDE Shipment",
  "type": "object",
  "required": [
    "@context",
    "type",
    "issuer",
    "issuanceDate",
    "credentialSubject"
  ],
  "properties": {
    "@context": {
      "type": "array",
      "items": [
        {
          "const": "https://www.w3.org/2018/credentials/v1"
        },
        {
          "type": "string",
          "format": "uri"
        }
      ],
      "minItems": 2
    },
    "id": {
      "type": "string",
      "format": "uri"
    },
    "type": {
      "type": "array",
      "contains": {
        "const": "VerifiableCredential"
      },
      "items": {
        "type": "string"
      },
      "minItems": 2
    },
    "issuer": {
      "oneOf": [
        {
          "type": "string",
          "format": "uri"
        },
        {
          "type": "object",
          "required": [
            "id"
          ],
          "properties": {
            "id": {
              "type": "string",
              "format": "uri"
            },
            "name": {
              "type": "string"
            }
          }
        }
      ]
    },
    "issuanceDate": {
      "type": "string",
      "format": "date-time"
    },
    "expirationDate": {
      "type": "string",
      "format": "date-time"
    },
    "credentialSubject": {
      "type": "object",
      "required": [
        "type",
        "contractNumber"
      ],
      "properties": {
        "id": {
          "type": "string",
          "format": "uri",
          "description": "DID or URI of the Shipment"
        },
        "type": {
          "const": "Shipment"
        },
        "buyerParty": {
          "description": "buyer party",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "const": "Party"
              }
            }
          }
        },
        "requestedDeliveryPeriod": {
          "description": "requested delivery period"
        },
        "placeOfDeliveryUNLocode": {
          "description": "Place of Delivery UN Locode",
          "type": "string"
        },
        "isRealizedByConsignment": {
          "description": "is realized by consignment"
        },
        "totalTransportHandlingUnitQuantity": {
          "description": "total transport handling unit quantity"
        },
        "insuranceValueAmount": {
          "description": "insurance value amount",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "const": "MonetaryAmount"
              }
            }
          }
        },
        "finalDestinationUNLocode": {
          "description": "Final Destination UN Locode",
          "type": "string"
        },
        "portOfDischargeUNLocode": {
          "description": "Port Of Discharge UN Locode",
          "type": "string"
        },
        "relatedOrder": {
          "description": "related order"
        },
        "invoiceDocument": {
          "description": "invoice document",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "const": "Document"
              }
            }
          }
        },
        "hasGoodsItem": {
          "description": "has goods item",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "const": "GoodsItem"
              }
            }
          }
        },
        "declaredCustomsValueAmount": {
          "description": "declared customs value amount",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "const": "MonetaryAmount"
              }
            }
          }
        },
        "totalGoodsItemQuantity": {
          "description": "total goods item quantity"
        },
        "shipmentIdentifier": {
          "description": "Shipment Identifier",
          "type": "string"
        },
        "totalPackageQuantity": {
          "description": "total package quantity"
        },
        "portOfLoadingUNLocode": {
          "description": "Port of Loading UN Locode",
          "type": "string"
        },
        "placeOfReceiptUNLocode": {
          "description": "Place of Receipt UN Locode",
          "type": "string"
        },
        "sellerParty": {
          "description": "seller party"
        },
        "hazardousRiskIndicator": {
          "description": "Hazardous Risk Indicator",
          "type": "boolean"
        },
        "contractNumber": {
          "description": "Contract Number",
          "type": "string"
        },
        "hasShipmentPeriod": {
          "description": "has shipment period",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "const": "PeriodOfTime"
              }
            }
          }
        },
        "deliveryTerms": {
          "description": "delivery terms",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "const": "TradeDeliveryTerms"
              }
            }
          }
        }
      }
    },
    "proof": {
      "type": "object",
      "description": "Digital signature proof"
    }
  }
}
{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/jgmikael/trade-automation/credentials/certificateoforigin-schema.json",
  "title": "Certificate of Origin Verifiable Credential",
  "description": "W3C Verifiable Credential schema for KTDDE Certificate of Origin",
  "type": "object",
  "required": [
    "@context",
    "type",
    "issuer",
    "issuanceDate",
    "credentialSubject"
  ],
  "properties": {
    "@context": {
      "type": "array",
      "items": [
        {
          "const": "https://www.w3.org/2018/credentials/v1"
        },
        {
          "type": "string",
          "format": "uri"
        }
      ],
      "minItems": 2
    },
    "id": {
      "type": "string",
      "format": "uri"
    },
    "type": {
      "type": "array",
      "contains": {
        "const": "VerifiableCredential"
      },
      "items": {
        "type": "string"
      },
      "minItems": 2
    },
    "issuer": {
      "oneOf": [
        {
          "type": "string",
          "format": "uri"
        },
        {
          "type": "object",
          "required": [
            "id"
          ],
          "properties": {
            "id": {
              "type": "string",
              "format": "uri"
            },
            "name": {
              "type": "string"
            }
          }
        }
      ]
    },
    "issuanceDate": {
      "type": "string",
      "format": "date-time"
    },
    "expirationDate": {
      "type": "string",
      "format": "date-time"
    },
    "credentialSubject": {
      "type": "object",
      "required": [
        "type",
        "certificateNumber",
        "exporterParty",
        "issuingAuthorityParty",
        "issueDate",
        "issuerParty"
      ],
      "properties": {
        "id": {
          "type": "string",
          "format": "uri",
          "description": "DID or URI of the CertificateOfOrigin"
        },
        "type": {
          "const": "CertificateOfOrigin"
        },
        "invoiceNumber": {
          "description": "Invoice Number",
          "type": "string"
        },
        "creditIdentifier": {
          "description": "Credit Identifier",
          "type": "string"
        },
        "transportDocumentNumber": {
          "description": "Transport Document Number",
          "type": "string"
        },
        "certificateNumber": {
          "description": "certificate number"
        },
        "contractNumber": {
          "description": "Contract Number",
          "type": "string"
        },
        "importerParty": {
          "description": "importer party",
          "type": "object",
          "properties": {
            "type": {
              "const": "Party"
            }
          }
        },
        "consignorParty": {
          "description": "consignor party",
          "type": "object",
          "properties": {
            "type": {
              "const": "Party"
            }
          }
        },
        "exporterParty": {
          "description": "exporter party",
          "type": "object",
          "properties": {
            "type": {
              "const": "Party"
            }
          }
        },
        "purchaseOrderNumber": {
          "description": "Purchase Order Number",
          "type": "string"
        },
        "consigneeParty": {
          "description": "consignee party",
          "type": "object",
          "properties": {
            "type": {
              "const": "Party"
            }
          }
        },
        "documentIdentifier": {
          "description": "Document Identifier",
          "type": "string"
        },
        "issuingAuthorityParty": {
          "description": "issuing authority party",
          "type": "object",
          "properties": {
            "type": {
              "const": "Party"
            }
          }
        },
        "issueDate": {
          "description": "Issue Date",
          "type": "string",
          "format": "date-time"
        },
        "issuerParty": {
          "description": "issuer party",
          "type": "object",
          "properties": {
            "type": {
              "const": "Party"
            }
          }
        },
        "hasConsignment": {
          "description": "has consignment",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "const": "Consignment"
              }
            }
          }
        }
      }
    },
    "proof": {
      "type": "object",
      "description": "Digital signature proof"
    }
  }
}